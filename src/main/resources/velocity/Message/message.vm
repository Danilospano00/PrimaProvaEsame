#parse("/velocity/layout.vm")
#@mainLayout()
<form id="reminderForm" action="/message/" method="post">

    <p>Inserimento nuovo Post</p>
    <table>
        <tr>
            <td>
            <label>Testo del Post</label>
            ##il punto esclamativo serve a dire fallo solo se non Ã¨ null
                <textarea name="testo" rows="4" cols="50" placeholder="testo del post">$!messageDto.testo</textarea>
            </td>
        </tr>
        <tr>
        </tr>
        #if($messageDto.id)
            <tr>
                <td>
                <label>Attivo</label>
                    <input type="checkbox" name="attivo" value="value="$!messageDto.attivo"">
                </td>
            </tr>
        #end
        #if($errorMessage)
            <p class="bad notification">Errore: $errorMessage.message</p>
        #end
    </table>
    <input type="submit" value="Salva">
</form>
#end
